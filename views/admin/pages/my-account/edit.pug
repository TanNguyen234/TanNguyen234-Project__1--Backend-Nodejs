extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)
    h1 Cập nhật thông tin cá nhân
    form(action=`${prefixAdmin}/my-account/edit?_method=PATCH` method="POST" enctype="multipart/form-data")
        div(class="form-group")
          label(for="fullName") Họ tên *
          input(type="text" class="form-control" id="fullName" name="fullName" value=user.fullName required)
        div(class="form-group")
          label(for="email") Email *
          input(type="email" class="form-control" id="email" name="email" value=user.email)
        div(class="form-group")
          label(for="password") Mật khẩu *
          input(type="password" class="form-control" id="password" name="password")
        div(class="form-group")
          label(for="phone") Số điện thoại *
          input(type="number" class="form-control" id="phone" name="phone" value=user.phone)
        div(class="form-group" upload-image)
          label(for="avatar") Avatar
          input(type="file" class="form-control-file" id="avatar" name="avatar" upload-image-input accept="image/*")
          div(update) 
            img(src=user.avatar class="upload-image-preview" upload-image-preview alt="")
            span x
        div(class="form-group")
          button(type="submit" class="btn btn-primary") Cập nhật