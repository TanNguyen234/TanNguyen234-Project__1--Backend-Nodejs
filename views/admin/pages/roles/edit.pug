extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-success(5000) 
  +alert-error(5000)

  h1(class="mb-4") Sửa nhóm quyền 

  form(
    action=`${prefixAdmin}/roles/edit/${role.id}?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="tite") Tiêu đề
      input(type="text" class="form-control" id="title" name="title" value=role.title required)
    div(class="form-group")
      label(for="desc") Mô tả
      input(type="text" class="form-control" id="desc" value=role.description name="description")
    div(class="form-group")
      button(type="submit" class="btn btn-primary") Cập nhật