include ../mixins/sub-menu.pug

header.header 
  .container 
    .row.align-items-center 
        .col-3 
          .inner-logo
           a(href="/")
             img(src="/images/logo.svg", alt="Logo")
             
        .col-5 
          form(action="/search" method="GET")
            div(class='form-group d-flex mb-0')
              input(type='text' name='keyword' class='form-control' placeholder='Nhập từ khóa...' value=keyword)
              button(type='submit' class='btn btn-primary') Tìm

        .col-4.p-relative.right-0
          .inner-menu
            ul 
              li
                a(href="/") Trang chủ
              li(class='sub-menu')
                - const pathProduct = '/products'

                a(href=pathProduct) Sản phẩm

                 +sub_menu(productCategories, pathProduct)
              li
                a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : 0})
              li
                a(href="/user/register") Đăng ký
                