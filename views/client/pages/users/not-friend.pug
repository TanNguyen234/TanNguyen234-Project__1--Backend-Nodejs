extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  //Dùng chung layout-default nên phải Templete Inheritance
  
  .container.my-3 

      include ../../partials/list-btn-users.pug

      .row 
        .col-12 
          +box-head("Danh sách người dùng")

      .row(data-users-not-friend=user.id)
        each user in users 
         .col-6(user-id=user.id)
          .box-user 
            .inner-avatar
              img(src=(user.avatar ? user.avatar : '/images/avatar.png') alt=user.fullName)
            .inner-info
              .inner-name #{user.fullName}
              .inner-buttons 
                button(class='btn btn-sm btn-primary mr-1' btn-add-friend=user.id) Kết Bạn 
                button(class='btn btn-sm btn-secondary mr-1' btn-cancel-friend=user.id) Hủy 
            
block script
  script(type='module' src="/js/users.js")