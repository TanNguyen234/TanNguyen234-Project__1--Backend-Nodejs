extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    .container.my-3 
     //-Vì không có truyền biến nên không là mixin mà là partials
     include ../../partials/list-btn-users.pug

     .row 
      .col-12 
       +box-head('Chat')
     
     .row 
      .col-12 
       .chat(my-id=user.id) 
        .inner-body
         each chat in chats
          if(chat.user_id == user.id)
           .inner-outgoing.mb-2
            if(chat.content)
             .inner-content 
               | #{chat.content}
            if(chat.images.length > 0)
             .inner-images
                each image in chat.images
                 img(src=image)
          else 
           .inner-incoming.mb-2
            .inner-name 
              | #{chat.infoUser.fullName}
            if(chat.content)
             .inner-content 
               | #{chat.content}
            if(chat.images.length > 0)
             .inner-images
                each image in chat.images
                 img(src=image)
         
         .inner-list-typing
          //- .box-typing 
          //-  .inner-name Foxy
          //-  .inner-dots
          //-   span 
          //-   span 
          //-   span
        .inner-preview-images
         div(class="custom-file-container" data-upload-id="upload-images")

        .inner-root
          form(class="inner-form" action="")
           input(type="text" placeholder="Nhập nội dung..." class='input-text')
           label(class='icon_images' for='file-upload-with-preview-upload-images')
            i(class="fa-regular fa-image")
           span(class='icon')
            i(class="fa-regular fa-face-smile icon-chat")
           div(class="tooltip" role="tooltip")
            emoji-picker
           button(type="submit") 
            i(class="fa-regular fa-paper-plane")
    block script 
      script(type="module" src="/js/chat.js")